#!/usr/bin/env ruby

require 'uri'
require 'time'
require 'net/http'


class TimeChecker < Struct.new(:local_time, :url)
  def remote_time
    @remote_time ||= Time.parse raw_remote_time
  end

  def raw_remote_time
    uri = URI.parse url
    Net::HTTP.new(uri.host, uri.port).request(Net::HTTP::Get.new uri.path).body
  end

  def error_message
    return if close_enough?
    "INCORRECT LOCAL DATE\nLOCAL:  #{local_time}\nREMOTE: #{remote_time}"
  end

  def close_enough?
    difference_in_seconds <= 1.0
  end

  def difference_in_seconds
    (local_time - remote_time).abs
  end
end


# run the script if executed as binary
if $0 == __FILE__
  message = TimeChecker.new(Time.now.utc, "http://what-time-is-it.heroku.com/").error_message
  if message
    $stderr.puts message
    exit 1
  end
end
